<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinMovieAppMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cloud_white</item>
        <item name="colorPrimaryVariant">@color/silver</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- theme for custom toolbar ThemeOverlay.AppCompat.Light means Black in color-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
    </style>

    <style name="MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SwitchButton" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/red_700</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/cloud_white
        </item>
    </style>
</resources>